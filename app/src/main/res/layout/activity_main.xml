<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/back_ground">

    <!-- Logo ImageView -->
    <ImageView
        android:id="@+id/logoImageView"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:src="@drawable/yoga_logo"
        android:scaleType="fitCenter"
        android:contentDescription="Universal Yoga Logo"
        android:layout_marginTop="-300dp" />

    <!-- TextView for "Universal Yoga" below the logo -->
    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Universal Yoga"
        android:textSize="24sp"
        android:textColor="#000000"
        android:layout_marginTop="-400dp"
        android:textStyle="bold" />

    <!-- Button Create Class -->
    <Button
        android:id="@+id/buttonCreateClass"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:text="Create Class"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:elevation="5dp"
        android:alpha="1"
        android:background="@drawable/button_background" />

    <!-- Button View All Classes -->
    <Button
        android:id="@+id/buttonViewAllClasses"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:text="View All Classes"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:elevation="5dp"
        android:alpha="1"
        android:background="@drawable/button_background" />

    <!-- Button Add Teacher -->
    <Button
        android:id="@+id/buttonAddTeacher"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:text="Add Teacher"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:elevation="5dp"
        android:alpha="1"
        android:background="@drawable/button_background" />

    <!-- Button View All Teachers -->
    <Button
        android:id="@+id/buttonViewAllTeachers"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:text="View All Teachers"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:elevation="5dp"
        android:alpha="1"
        android:background="@drawable/button_background" />

    <!-- Button View Booked Classes by Email -->
    <Button
        android:id="@+id/buttonViewBookedClasses"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:text="View Booked Classes by Email"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:elevation="5dp"
        android:alpha="1"
        android:background="@drawable/button_background" />


</LinearLayout>
